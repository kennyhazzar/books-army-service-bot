<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{{ title }}</title>
  </head>
  <body class="dark-mode">
    <h2>{{ title }} {{ userName }}</h2>
    {{#each books}}
      <div>
        <p>{{ index }}. {{ title }} {{ author }}; {{ currentPage }} / {{ totalPage }} ; {{ percent }} (id: {{ id }})</p>
        <a href={{ begginLink }}>{{ begginText }}</a>
        <a href={{ continousLink }}>{{ continousText }}</a>
      </div>
    {{/each}}
    <div><p>{{ pagesText }}: </p>{{#each pageLinks}}<p><a href={{ url }}>{{index}}</a></p>{{/each}}</div>
  </body>

  <style type="text/css">
    body {
    padding: 5%;
    background-color: white;
    color: #2a2b2e;
    font-size: 25px;
    }

    a {
      color: white;
      font-size: 25px;
    }

    .dark-mode {
      background-color: #2a2b2e;
      color: white;
    }
  </style>
</html>